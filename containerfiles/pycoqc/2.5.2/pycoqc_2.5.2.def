Bootstrap: docker
From: python:3.10-slim

%labels
    Description "Container for PycoQC (Oxford Nanopore QC visualization)"
    Maintainer "hsandakly"
    Version "2.5.2"

%environment
    export LC_ALL=C.UTF-8
    export LANG=C.UTF-8
    export PATH=/usr/local/bin:$PATH

%post
    set -eux

    # Met à jour le système et installe les dépendances nécessaires
    apt-get update && apt-get install -y --no-install-recommends \
        build-essential \
        python3-dev \
        libffi-dev \
        libssl-dev \
        git \
        wget \
        ca-certificates \
        && rm -rf /var/lib/apt/lists/*

    # Met à jour pip et installe pycoQC
    pip install --upgrade pip wheel setuptools

    # Installation de PycoQC et de ses dépendances
    pip install pycoQC==2.5.2

%runscript
    echo "Launching PycoQC..."
    exec pycoQC "$@"

%test
    echo "Testing PycoQC installation..."
    pycoQC --version
